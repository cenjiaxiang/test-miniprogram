.post-detail-container {
  display: flex;
  flex-direction: column;
}
.post-detail-head-image {
  width: 100%;
  height: 460rpx;
  position: relative;
}
.post-detail-author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.author-avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author-name {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #666;
}
.author-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.post-detail-title {
  margin-left: 40rpx;
  font-size: 36rpx;
  letter-spacing: 2px;
  color: #333;
}
.tool {
  margin-top: 20rpx;
}
.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image {
  width: 90rpx;
  height: 90rpx;
}
.share-img {
  margin-left: 30rpx;
}
.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.post-detail-content {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
.post-detail-audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}